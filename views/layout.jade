!!! html
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    include topbar
    div.container
      - if (flash)
        div.row-fluid
          div.span12.well
            - if(flash.info)
              = flash.info[0]
            - if(flash.error)
              = flash.error[0]
              //- TODO: show these flash messages as a list


      != body
            
    div#footer.footer 
      script(type='text/javascript', src='/javascripts/jquery-1.7.2.min.js')
      script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')

      script(src="http://codeforamerica.github.com/cfa_banner/banner.js?type=corner&forkUrl=https://github.com/codeforamerica/civicsgarden", id="cfa_banner_script")