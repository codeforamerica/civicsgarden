div.navbar.navbar-fixed-top
  div.navbar-inner
    div.container
      a.brand(href='/') Civics Garden 
      
      div#login.pull-right      
        -if(userSession)
            div.btn-group
              a.btn(href='/users/' + userSession.username)
                img.user-avatar(src=userSession.avatarUrl, width="17px", height="17px")
                = userSession.username
              a.btn.dropdown-toggle(data-toggle="dropdown", href="#")
                span.caret
              ul.dropdown-menu
                li
                  a(href='/users/' + userSession.username) My plant
                li
                  a(href="/logout") Logout
        -else
            a#login-btn.btn.btn-primary(href='/auth/twitter') Login with Twitter
