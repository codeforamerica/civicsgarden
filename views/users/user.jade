- if(userSession && userSession.username == user.username)
  - if (!plant)
    div.row-fluid
      div.span3.well
        form.modal-form.form-horizontal(action="/plants", method="POST")
          button.btn.btn-success(type="submit") Make your Planting!
      div.span9
          strong You haven't yet planted anything!
  - else 
    div.row-fluid
      div.span3.well
        p Your plant is #{plant.status}
        a.btn.btn-large.btn-primary(href="", data-toggle="modal", href="#planting-form") Water your Plant             
          
    div#planting-form.modal(style="display: none;")
      form.modal-form.form-horizontal(action="/plants/#{userSession.username}/update", method="POST")

        div.modal-header
          button.close(data-dismiss="modal") Ã—
          h3 Water your plant

        div.modal-body
          p Watering your plant records your civic activity
          fieldset
            div.control-group
              label.control-label(for="description") Describe your civic activity
              div.controls
                textarea(class="input-xlarge", rows="3", name="update[description]")

        div.modal-footer
          button.btn(type="submit", data-dismiss="modal") Cancel
          button.btn.btn-primary(type="submit") Water it!
  
- else 
  - if (!plant)
    div.row-fluid
      div.span12
        strong #{user.username} hasn't planted anything yet

-if (plant)
  div.row-fluid
    div.span12
      strong The status of #{user.username}'s plant is '#{plant.status}'.
      -each update in plant.updates
        div.row-fluid
          div.span2
            img(src="/images/status-#{update.type}.png", height="50px", width="50px")
          div.span8= update.description
          div.span2= update.createdAt